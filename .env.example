# ===========================================
# NDG PR Dashboard - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values.

# --- GitHub ---
# Personal access token with repo scope
GITHUB_TOKEN=
# Comma-separated list of GitHub orgs to fetch PRs from
GITHUB_ORGS=

# --- GitLab ---
# GitLab personal access token (api scope)
GITLAB_TOKEN=
# GitLab instance URL (default: https://gitlab.com)
GITLAB_URL=
# Comma-separated list of GitLab group IDs to fetch MRs from
GITLAB_GROUP_IDS=

# --- Bitbucket ---
# Bitbucket username
BITBUCKET_USERNAME=
# Bitbucket app password (with repository read permissions)
BITBUCKET_APP_PASSWORD=
# Comma-separated list of Bitbucket workspaces
BITBUCKET_WORKSPACES=

# --- App ---
# Your username (shown in the UI to highlight your PRs)
NEXT_PUBLIC_MY_USERNAME=
